#!/bin/bash

if [ $# -ne 3 ]; then
   echo "Usage: $0 path-to-menu-dir depth version"
   exit 1
fi

dir=$1
depth=$2
version=$3

menu1=${dir}/locations.txt:${depth}:${version}
menu2=${dir}/products.txt:${depth}:${version}

toolname -o 4 $menu1 $menu2 | redis-cli -x set menu
toolname -o 4 $menu1 > menu0.txt
toolname -o 4 $menu2 > menu1.txt

